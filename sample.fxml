<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <Pane prefHeight="450.0" prefWidth="400.0">
         <children>
            <TextArea fx:id="area" editable="false" layoutX="0.0" layoutY="50.0" prefHeight="400.0" prefWidth="400.0" />
            <TextField fx:id="field" layoutX="0.0" layoutY="0.0" prefHeight="50.0" prefWidth="350.0" onAction="#onEnter"/>
            <Button fx:id="click" layoutX="350.0" mnemonicParsing="false" onAction="#clickButton" prefHeight="50.0" prefWidth="52.0" text="Button" />
         </children>
      </Pane>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
